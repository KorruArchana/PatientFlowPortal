
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_GoogleAnalytics", "Account")
<script type="text/javascript">
    $(document).ready(function () {
        $('#UsageReport').click(function () {
            LogEvent('Reports', 'Usage Report', 'Reports', '');
            var reportType = $(this).text().trim();
            window.location.href = '@Url.Action("UsageReportSelection", "Report")' + '?reportName=' + reportType;
        })
        $('#AnonymousQuestionnaireReport').click(function () {
            LogEvent('Reports', 'Anonymous Questionnaire Report', 'Reports', '');
             var reportType = $(this).text().trim();
            window.location.href = '@Url.Action("QuestionnaireReportSelection", "Report")' + '?reportName=' + reportType;
        })
    })
</script>

<div style="width: 100%; justify-content: center;padding: 0px !important;flex-grow:1;" class="mdl-grid lightblueBackground">
    <div class="mdl-card portalMdlCard DepUserPracticeAdminStyle" style="margin: 0px !important">
        <div class="mdl-card__title mdl-card--table__header pageHeader">
            <h2 class="mdl-card__title-text mdl-typography--title pageTitle">Reports</h2>
        </div>
        <div>
            <button type="button" class="reportButton mdl-button mdl-js-button mdl-button--raised" id="UsageReport">
                Usage Report
            </button>
            <br /><br />
            <button type="button" class="reportButton mdl-button mdl-js-button mdl-button--raised" id="AnonymousQuestionnaireReport">
                Anonymous Questionnaire Report
            </button>
        </div>
    </div>
</div>
