@model EMIS.PatientFlow.Web.ViewModel.ResetPasswordViewModel
@using EMIS.PatientFlow.Common.Enums

@Html.Partial("_GoogleAnalytics","ResetPassword")
@using (Ajax.BeginForm("ResetPassword", "Account", new AjaxOptions { UpdateTargetId = "ContentContainer", InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()
    <div class="rightBlockheader">
        <div class="rightBlockHeadingContainer">
            <span class="rightBlockHeading">
                User
            </span>
            <span><img src="~/images/arrow.png"></span>
            <span class="rightBlockSubHeading">
                Reset Password
            </span>
        </div>
        
    </div>

    <div class="rightBlockContent">
        <div>
            <p class="leftTxt">
                @Html.LabelFor(m => m.UserName):<span class="required-field"> *</span>
            </p>
            @Html.TextBoxFor(m => m.UserName, new { @class = "rightTxtBox", @readonly = true })
        </div>
        <div>
            <p class="leftTxt">
                @Html.LabelFor(m => m.NewPassword):<span class="required-field"> *</span>
            </p>
            @Html.PasswordFor(m => m.NewPassword, new { @class = "rightTxtBox" }) @Html.ValidationMessageFor(m => m.NewPassword)
        </div>
        <div>
            <p class="leftTxt">
                @Html.LabelFor(m => m.ConfirmPassword):<span class="required-field"> *</span>
            </p>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "rightTxtBox" }) @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

    </div>
    <div class="editBtnContainer">
        <input type="submit" value="Save" class="saveEditBtn" id="Formsubmit" />
        <input type="button" value="Cancel" class="cancelEditBtn" onclick="return LoadContent(@Convert.ToInt32(NodeType.Users), '0')" />
    </div>
    <div style="color: red; margin-left: 40px">
        @Html.ValidationMessage("CustomError")
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


